datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(uuid())
  username      String
  email         String         @unique
  password      String
  conversations Conversation[]
  messages      Message[]
}

model Conversation {
  id           String    @id @default(uuid())
  name         String
  messages     Message[]
  participants User[]
  createdAt    DateTime
}

model Message {
  id String @id @default(uuid())

  message        String
  conversation   Conversation? @relation(fields: [conversationId], references: [id])
  conversationId String?
  createdAt      DateTime
  user           User?         @relation(fields: [userId], references: [id])
  userId         String?
}
